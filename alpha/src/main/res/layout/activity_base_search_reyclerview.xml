<?xml version="1.0" encoding="utf-8"?>
<com.icourt.alpha.view.SoftKeyboardSizeWatchLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/softKeyboardSizeWatchLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_comm_serach" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <include layout="@layout/layout_refresh_recyclerview" />

            <include
                layout="@layout/layout_empty_tv"
                android:visibility="gone" />
        </FrameLayout>

    </LinearLayout>
</com.icourt.alpha.view.SoftKeyboardSizeWatchLayout>