<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/chat_user_icon_iv"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@mipmap/avatar_default_24" />


    <com.icourt.alpha.view.BubbleImageView
        android:id="@+id/chat_image_iv"
        android:layout_width="207dp"
        android:layout_height="170dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="72dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:bubble_angle="4dp"
        app:bubble_arrowHeight="10dp"
        app:bubble_arrowLocation="left"
        app:bubble_arrowOffset="-5dp"
        app:bubble_arrowTop="15dp"
        app:bubble_arrowWidth="8dp"
        app:bubble_showShadow="true"
        app:bubble_showText="false" />

</LinearLayout>
