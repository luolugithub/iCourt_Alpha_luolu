<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/activity_add_contact_item_delete_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/remove"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/activity_add_contact_item_keyname_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:textColor="@color/search_history_keyword_color"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/activity_add_contact_item_arrow_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/arrow_bottom" />

        <EditText
            android:id="@+id/activity_add_contact_item_valuename_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:ellipsize="end"
            android:maxLines="20"
            android:padding="10dp"
            android:textColor="@color/search_history_keyword_color"
            android:textSize="14dp" />
    </LinearLayout>

    <View
        android:id="@+id/activity_add_contact_item_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/main_buttom_cutline_color" />
</LinearLayout>