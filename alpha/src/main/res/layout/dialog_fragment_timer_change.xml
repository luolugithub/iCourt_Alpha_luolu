<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="6dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13.5dp"
            android:text="选择计时开始时间"
            android:textColor="@color/search_history_keyword_color" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="13.5dp"
            android:background="@color/alpha_divider_color" />


        <LinearLayout
            android:id="@+id/ll_wheelview"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.bigkoo.pickerview.lib.WheelView
                android:id="@+id/wheelview_date"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/viewfinder_laser"
                android:minHeight="60dp" />

            <com.bigkoo.pickerview.lib.WheelView
                android:id="@+id/wheelview_hour"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/viewfinder_laser"
                android:minHeight="60dp" />

            <com.bigkoo.pickerview.lib.WheelView
                android:id="@+id/wheelview_minute"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/viewfinder_laser"
                android:minHeight="60dp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:padding="3dp"
                android:text="@string/timing_cancel"
                android:textColor="@color/timer_select_cancle_color"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tv_finish"
                android:layout_width="88dp"
                android:layout_height="36dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_round_orange"
                android:gravity="center"
                android:text="@string/timing_finish"
                android:textColor="@color/white" />
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>