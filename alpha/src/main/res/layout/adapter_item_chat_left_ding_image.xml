<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/chat_user_icon_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/avatar_default_24" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="72dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chat_ding_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_bubble_left_bg_top"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:text="钉了一条消息"
            android:textColor="@color/alpha_font_color_black"
            android:textSize="@dimen/alpha_font_size_comm" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:background="@drawable/chat_bubble_left_bg_bottom"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/chat_ding_content_iamge_iv"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:padding="-5dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/login_alpha_logo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/chat_ding_source_user_icon_iv"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/avatar_default_24" />

                <TextView
                    android:id="@+id/chat_ding_source_user_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="阿三哥"
                    android:textColor="@color/alpha_font_color_black"
                    android:textSize="@dimen/alpha_font_size_mini_lowest" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
