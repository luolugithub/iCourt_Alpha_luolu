<?xml version="1.0" encoding="utf-8"?>
<com.icourt.alpha.view.SoftKeyboardSizeWatchLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/softKeyboardSizeWatchLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_comm_serach" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.zhaol.refreshlayout.EmptyRecyclerView
                android:id="@id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </FrameLayout>


    </LinearLayout>
</com.icourt.alpha.view.SoftKeyboardSizeWatchLayout>