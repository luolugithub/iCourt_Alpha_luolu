<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rg_main_tab"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@android:color/white"
    android:elevation="6dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RadioButton
        android:id="@+id/tab_news"
        style="@style/mainPageRadioButtonStyple"
        android:layout_weight="1"
        android:checked="true"
        android:drawableTop="@drawable/tab_news"
        android:text="消息" />

    <RadioButton
        android:id="@+id/tab_task"
        style="@style/mainPageRadioButtonStyple"
        android:layout_weight="1"
        android:drawableTop="@drawable/tab_task"
        android:text="任务" />


    <TextView
        android:id="@+id/tab_voice"
        style="@style/mainPageRadioButtonStyple"
        android:background="?attr/selectableItemBackground"
        android:drawableTop="@drawable/tab_find"
        android:gravity="center"
        android:text="计时" />

    <RadioButton
        android:id="@+id/tab_find"
        style="@style/mainPageRadioButtonStyple"
        android:layout_weight="1"
        android:drawableTop="@drawable/tab_find"
        android:text="探索" />

    <RadioButton
        android:id="@+id/tab_mine"
        style="@style/mainPageRadioButtonStyple"
        android:layout_weight="1"
        android:drawableTop="@drawable/tab_mine"
        android:text="我的" />

</RadioGroup>