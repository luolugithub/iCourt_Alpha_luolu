<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="@dimen/dp20"
        android:layout_marginLeft="@dimen/dp20"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/msg_user_icon_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/avatar_default_24" />

                <TextView
                    android:id="@+id/msg_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/message_arrow_14"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="标题"
                    android:textColor="@color/alpha_font_color_black"
                    android:textSize="@dimen/alpha_font_size_mini" />

            </LinearLayout>

            <TextView
                android:id="@+id/msg_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="7dp"
                android:ellipsize="end"
                android:maxLines="5"
                android:textColor="@color/alpha_font_color_title" />

            <TextView
                android:id="@+id/msg_time_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@mipmap/ic_message_due_14"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="5"
                android:textColor="@color/alpha_font_color_title"
                android:textSize="@dimen/alpha_font_size_mini" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/alpha_height_divider"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/alpha_divider_color" />

            <TextView
                android:id="@+id/msg_from_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/message_project_14"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/alpha_font_color_black"
                android:textSize="@dimen/alpha_font_size_mini" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>