<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/file_from_user_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/avatar_default_24" />

    <TextView
        android:id="@+id/file_from_user_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="小吴"
        android:textColor="@color/alpha_font_color_black"
        android:textSize="@dimen/alpha_font_size_mini" />

    <TextView
        android:id="@+id/file_from_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="2017-04-01"
        android:textColor="@color/alpha_font_color_gray"
        android:textSize="@dimen/alpha_font_size_mini" />
</LinearLayout>