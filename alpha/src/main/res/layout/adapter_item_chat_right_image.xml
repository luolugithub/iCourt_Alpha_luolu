<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chat_user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="15dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="阿三哥"
            android:textSize="@dimen/alpha_font_size_mini" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:orientation="horizontal"
            android:padding="0dp">

            <include layout="@layout/adapter_item_chat_send_statu_layout" />

            <com.icourt.alpha.view.BubbleImageView
                android:id="@+id/chat_image_iv"
                android:layout_width="207dp"
                android:layout_height="170dp"
                android:layout_marginRight="9dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/placeholder_chat_img"
                app:bubble_angle="4dp"
                app:bubble_arrowHeight="10dp"
                app:bubble_arrowLocation="right"
                app:bubble_arrowOffset="-5dp"
                app:bubble_arrowTop="15dp"
                app:bubble_arrowWidth="8dp"
                app:bubble_showShadow="false"
                app:bubble_showText="false" />


        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/chat_user_icon_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/avatar_default_24" />
</LinearLayout>
