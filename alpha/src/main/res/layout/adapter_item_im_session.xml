<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.icourt.alpha.view.bgabadgeview.BGABadgeImageView
            android:id="@+id/iv_session_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@mipmap/avatar_default_24"
            app:badge_dragable="false"
            app:badge_horizontalMargin="1dp"
            app:badge_textSize="9sp"
            app:badge_verticalMargin="4dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_session_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="20:00"
                android:textColor="@color/alpha_font_color_gray"
                android:textSize="@dimen/alpha_font_size_mini_lowest" />

            <TextView
                android:id="@+id/tv_session_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/tv_session_time"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="标题"
                android:textColor="@color/alpha_font_color_black"
                android:textSize="@dimen/alpha_font_size_comm" />

            <TextView
                android:id="@+id/tv_session_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_session_title"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/iv_session_not_disturb"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="标题"
                android:textColor="@color/alpha_font_color_gray"
                android:textSize="@dimen/alpha_font_size_mini_medium" />

            <ImageView
                android:id="@+id/iv_session_not_disturb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_session_title"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:src="@mipmap/icon_mute" />

        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/alpha_height_divider"
        android:layout_marginLeft="60dp"
        android:background="@color/alpha_divider_color" />
</LinearLayout>