<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title_type_0" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginTop="@dimen/dp50"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="@dimen/dp2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp30"
                android:layout_marginTop="@dimen/dp30"
                android:src="@mipmap/my_settings_feedback_orange" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有任何建议或问题请联系"
                android:textColor="#9b9b9b"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:text="Alpha 客户服务中心 - 小橙子"
                android:textColor="#4a4a4a"
                android:textSize="16sp" />

            <View
                android:layout_width="64dp"
                android:layout_height="1dp"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="28dp"
                android:background="#e7e7e7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/feedback_wechat_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/setting_wechat"
                    android:drawablePadding="@dimen/dp10"
                    android:padding="@dimen/dp10"
                    android:text="Alpha-Service"
                    android:textColor="@color/alpha_font_color_black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/feedback_email_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp30"
                    android:drawableLeft="@mipmap/setting_email"
                    android:drawablePadding="@dimen/dp10"
                    android:padding="@dimen/dp10"
                    android:text="orange@icourt.cc"
                    android:textColor="@color/alpha_font_color_black"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>