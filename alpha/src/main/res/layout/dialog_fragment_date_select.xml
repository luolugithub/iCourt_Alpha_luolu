<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/alpha_height_title"
            android:background="@color/alpha_background_title"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/titleBack"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@mipmap/arrow_left" />

                <TextView
                    android:id="@id/titleContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:minEms="5"
                    android:text="2017年5月"
                    android:textColor="@color/alpha_font_color_title"
                    android:textSize="@dimen/alpha_font_size_comm" />

                <ImageView
                    android:id="@+id/titleForward"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@mipmap/arrow_right" />
            </LinearLayout>

            <TextView
                android:id="@id/titleAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_round_rect_white_gray_line"
                android:paddingBottom="2dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="2dp"
                android:text="今天"
                android:textSize="@dimen/alpha_font_size_comm" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/alpha_height_divider"
            android:background="@color/alpha_divider_color" />

        <com.github.sundeepk.compactcalendarview.CompactCalendarView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/compactcalendar_view"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            app:compactCalendarBackgroundColor="@android:color/white"
            app:compactCalendarCurrentDayBackgroundColor="@android:color/transparent"
            app:compactCalendarCurrentDayIndicatorStyle="fill_large_indicator"
            app:compactCalendarCurrentDayTextColor="@color/alpha_font_color_orange"
            app:compactCalendarCurrentSelectedDayBackgroundColor="#FFDE732C"
            app:compactCalendarCurrentSelectedDayIndicatorStyle="fill_large_indicator"
            app:compactCalendarCurrentSelectedDayTextColor="@android:color/white"
            app:compactCalendarDisplayOtherMonthDays="true"
            app:compactCalendarOtherMonthDaysTextColor="#D9D9D9"
            app:compactCalendarShouldSelectFirstDayOfMonthOnScroll="false"
            app:compactCalendarTargetHeight="200dp"
            app:compactCalendarTextColor="@color/alpha_font_color_black"
            app:compactCalendarTextSize="@dimen/alpha_font_size_comm" />

        <LinearLayout
            android:id="@+id/deadline_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/ic_timing_gray"
                android:drawablePadding="10dp"
                android:padding="12dp"
                android:text="到期时间" />


            <TextView
                android:id="@+id/duetime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="未设置"
                android:textColor="@color/alpha_font_color_black"
                android:textSize="@dimen/alpha_font_size_comm" />

            <ImageView
                android:id="@+id/clear_dutime_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/icon_close"
                android:tint="@android:color/darker_gray" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/alpha_height_divider"
            android:background="@color/alpha_divider_color" />

        <LinearLayout
            android:id="@+id/deadline_select_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="visible">

            <com.bigkoo.pickerview.lib.WheelView
                android:id="@+id/hour_wheelView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:minHeight="60dp" />

            <com.bigkoo.pickerview.lib.WheelView
                android:id="@+id/minute_wheelView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:minHeight="60dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/notice_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/ic_alarm_gary"
                android:drawablePadding="10dp"
                android:padding="12dp"
                android:text="提醒" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="未设置"
                android:textColor="@color/alpha_font_color_black"
                android:textSize="@dimen/alpha_font_size_comm" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="9dp"
                android:src="@mipmap/arrow_right" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/alpha_height_divider"
            android:background="@color/alpha_divider_color"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/repeat_notice_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/ic_loop_gary"
                android:drawablePadding="10dp"
                android:padding="12dp"
                android:text="重复任务" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/arrow_right"
                android:hint="未设置"
                android:textColor="@color/alpha_font_color_black"
                android:textSize="@dimen/alpha_font_size_comm" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/alpha_height_divider"
            android:background="@color/alpha_divider_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/bt_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="10dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:text="取消"
                android:textSize="@dimen/alpha_font_size_comm" />

            <TextView
                android:id="@+id/bt_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/orange_circle_bg"
                android:ems="6"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="完成"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
