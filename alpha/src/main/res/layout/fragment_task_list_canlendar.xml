<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/new_task_cardview"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp15"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:visibility="gone"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="您有"
                android:textColor="@color/alpha_font_color_orange"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/new_task_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text=" 5 "
                android:textColor="@color/alpha_font_color_orange"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="个新任务"
                android:textColor="@color/alpha_font_color_orange"
                android:textSize="13sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <com.icourt.alpha.view.GestureDetectorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gestureDetectorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="-100dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/calendar_title_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/header_search_comm" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/alpha_height_title"
                    android:background="@color/alpha_background_title"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/titleBack"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:src="@mipmap/arrow_left" />

                        <TextView
                            android:id="@id/titleContent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:minEms="5"
                            android:text="2017年5月"
                            android:textColor="@color/alpha_font_color_title"
                            android:textSize="@dimen/alpha_font_size_comm" />

                        <ImageView
                            android:id="@+id/titleForward"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:src="@mipmap/arrow_right" />
                    </LinearLayout>

                    <TextView
                        android:id="@id/titleAction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_round_rect_white_gray_line"
                        android:paddingBottom="2dp"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:paddingTop="2dp"
                        android:text="今天"
                        android:textSize="@dimen/alpha_font_size_comm" />

                </RelativeLayout>
            </LinearLayout>


            <include layout="@layout/layout_schedule_viewpager" />

        </LinearLayout>
    </com.icourt.alpha.view.GestureDetectorLayout>
</RelativeLayout>