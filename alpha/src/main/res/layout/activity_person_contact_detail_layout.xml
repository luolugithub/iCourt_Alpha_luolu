<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title_type_4" />

    <com.andview.refreshview.XScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/top_bottom_line_layout_bg"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/activity_person_contact_detail_name_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/search_history_keyword_color"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/activity_person_contact_detail_photo_view"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                         />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="13dp"
                    android:layout_marginTop="13dp"
                    android:background="@color/main_buttom_cutline_color" />

                <LinearLayout
                    android:id="@+id/activity_person_contact_detail_group_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_person_contact_detail_other_parent_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/top_bottom_line_layout_bg"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="15dp"
                >

            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_person_contact_detail_liaisons_parent_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/top_bottom_line_layout_bg"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="15dp"
                >

            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_person_contact_detail_impress_parent_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/top_bottom_line_layout_bg"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="印象"
                    android:textColor="@color/search_flowtag_text_color"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/activity_person_contact_detail_impress_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="73dp"
                    android:layout_weight="1"
                    android:textColor="@color/search_history_keyword_color"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_person_contact_detail_creat_parent_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="18dp">

                <TextView
                    android:id="@+id/activity_person_contact_detail_creat_name_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/search_flowtag_text_color"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/activity_person_contact_detail_creat_date_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/search_flowtag_text_color"
                    android:textSize="13dp" />
            </LinearLayout>
        </LinearLayout>
    </com.andview.refreshview.XScrollView>

</LinearLayout>