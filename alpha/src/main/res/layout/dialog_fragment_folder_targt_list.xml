<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alpha_background_window"
    android:orientation="vertical">


    <!-- 【标题布局 请勿轻易修改】 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/alpha_height_title"
        android:background="@color/alpha_background_title"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckedTextView
            android:id="@id/titleBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="取消"
            android:textColor="@color/alpha_font_color_gray"
            android:textSize="@dimen/alpha_font_size_comm" />

        <TextView
            android:id="@id/titleContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="移动／复制到"
            android:textColor="@color/alpha_font_color_title"
            android:textSize="@dimen/alpha_font_size_title"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp">

        <TextView
            android:id="@+id/foldr_go_parent_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/arrow_left"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="上一级"
            android:textColor="@color/alpha_font_color_gray" />

        <TextView
            android:id="@+id/foldr_parent_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="上一级文件夹标题"
            android:textColor="@color/alpha_font_color_gray" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/main_fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>