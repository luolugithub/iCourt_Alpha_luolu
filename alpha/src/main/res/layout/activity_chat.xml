<?xml version="1.0" encoding="utf-8"?>
<com.icourt.alpha.view.emoji.MyXhsEmoticonsKeyBoard xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ek_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@id/titleView"
            style="@style/AlphaTitleAppBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 【标题布局 请勿轻易修改】 -->
            <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/alpha_height_title"
                android:background="@color/alpha_background_title"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_scrollFlags="scroll|enterAlways|snap">

                <ImageView
                    android:id="@id/titleBack"
                    android:layout_width="38dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="10dp"
                    android:src="@mipmap/header_icon_back" />

                <com.icourt.alpha.view.bgabadgeview.BGABadgeTextView
                    android:id="@+id/titleNoticeView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:minEms="2" />

                <TextView
                    android:id="@id/titleContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="48dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="标题"
                    android:textColor="@color/alpha_font_color_title"
                    android:textSize="@dimen/alpha_font_size_title" />

                <ImageView
                    android:id="@id/titleAction"
                    android:layout_width="38dp"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:padding="10dp"
                    android:scaleType="center"
                    android:src="@mipmap/header_icon_star_solid" />

                <ImageView
                    android:id="@id/titleAction2"
                    android:layout_width="38dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="10dp"
                    android:src="@mipmap/header_icon_add" />
            </LinearLayout>

        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.icourt.alpha.view.xrefreshlayout.RefreshLayout
                android:id="@id/refreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.icourt.alpha.view.xrefreshlayout.RefreshLayout>

            <TextView
                android:id="@+id/chat_unread_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:layout_margin="10dp"
                android:background="@drawable/bg_round_orange"
                android:elevation="4dp"
                android:gravity="center"
                android:paddingBottom="7dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="7dp"
                android:text="12条未读消息"
                android:textColor="@android:color/white"
                android:textSize="@dimen/alpha_font_size_mini" />

        </FrameLayout>

    </LinearLayout>
</com.icourt.alpha.view.emoji.MyXhsEmoticonsKeyBoard>