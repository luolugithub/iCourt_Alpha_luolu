<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/over_timing_layout"
    android:layout_width="260dp"
    android:layout_height="70dp"
    android:background="@drawable/timing_tips">

    <com.icourt.alpha.view.fittextview.AutofitTextView
        android:id="@+id/over_timing_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="19dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="@string/timer_over_timing_remind_text"
        android:textSize="12sp"
        app:minTextSize="8sp" />

    <ImageView
        android:id="@+id/over_timing_close_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="12dp"
        android:padding="5dp"
        android:src="@mipmap/icon_close_14" />
</FrameLayout>