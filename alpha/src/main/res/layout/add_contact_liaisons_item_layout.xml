<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/activity_add_contact_liaisons_item_delete_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/remove" />

        <ImageView
            android:id="@+id/activity_add_contact_liaisons_item_photoview"
            android:layout_width="24dp"
            android:layout_height="24dp"
             />

        <TextView
            android:id="@+id/activity_add_contact_liaisons_item_name_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:ellipsize="end"
            android:padding="10dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/search_history_keyword_color"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/activity_add_contact_liaisons_item_relation_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:ellipsize="end"
            android:padding="10dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/search_history_keyword_color"
            android:textSize="14dp" />

    </LinearLayout>

    <View
        android:id="@+id/activity_add_contact_liaisons_item_line_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/main_buttom_cutline_color" />

</LinearLayout>