<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/login_status_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/message_nonet_hint_bg"
        android:gravity="center"
        android:padding="12dp"
        android:text="登陆状态"
        android:textColor="@color/search_cutline_color"
        android:visibility="gone" />


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


        <android.support.v7.widget.RecyclerView
            android:id="@id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white" />

        <RelativeLayout
            android:id="@+id/empty_layout_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="140dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/icon_placeholder_user" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/message_no_recent_list" />
            </LinearLayout>

            <TextView
                android:id="@+id/start_chat_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="40dp"
                android:background="@drawable/orange_circle_bg"
                android:paddingBottom="10dp"
                android:paddingLeft="28dp"
                android:paddingRight="28dp"
                android:paddingTop="10dp"
                android:text="@string/message_start_chat"
                android:textColor="@color/white"
                android:textSize="@dimen/alpha_font_size_comm" />
        </RelativeLayout>


    </FrameLayout>

</LinearLayout>
