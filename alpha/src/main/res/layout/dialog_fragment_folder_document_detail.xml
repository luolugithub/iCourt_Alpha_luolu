<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <!-- 【标题布局 请勿轻易修改】 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/alpha_height_title"
        android:background="@color/alpha_background_title"
        android:gravity="center_vertical"

        android:orientation="horizontal">


        <TextView
            android:id="@id/titleContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="文件夹详情"
            android:textColor="@color/alpha_font_color_title"
            android:textSize="@dimen/alpha_font_size_title"
            android:textStyle="bold" />

        <CheckedTextView
            android:id="@id/titleAction"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="关闭"
            android:textColor="@color/alpha_font_color_orange"
            android:textSize="@dimen/alpha_font_size_comm" />
    </RelativeLayout>


    <include layout="@layout/header_folder_document_desc" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        style="@style/AlphaTitleTabLayout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/alpha_height_title"
        android:layout_gravity="center_horizontal"
        app:tabMinWidth="70dp"
        app:tabMode="fixed" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/alpha_background_window"
        android:overScrollMode="never" />
</LinearLayout>
