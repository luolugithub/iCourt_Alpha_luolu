<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="260dp"
    android:layout_height="198dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="148dp"
        android:background="@drawable/bg_timing_notice"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="260dp"
            android:layout_height="81dp">

            <com.icourt.alpha.view.fittextview.AutofitTextView
                android:id="@+id/notice_timing_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="00:00:00"
                android:textColor="@color/alpha_font_color_orange"
                android:textSize="40dp"
                app:minTextSize="8sp" />

            <ImageView
                android:id="@+id/notice_timing_stop_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="14dp"
                android:padding="10dp"
                android:src="@drawable/orange_side_dot_bg" />
        </RelativeLayout>

        <TextView
            android:id="@+id/notice_timing_title_tv"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/arrow_right"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="20dp"
            android:paddingLeft="24dp"
            android:paddingRight="15dp"
            android:paddingTop="20dp"
            android:text="计时标题" />

    </LinearLayout>

    <View
        android:id="@+id/timing_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent" />
</LinearLayout>