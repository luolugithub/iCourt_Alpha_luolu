<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/titleView"
    style="@style/AlphaTitleAppBarLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- 【标题布局 请勿轻易修改】 -->
    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alpha_height_title"
        android:background="@color/alpha_background_title"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layout_scrollFlags="scroll|enterAlways|snap">


        <com.icourt.alpha.view.tab.AlphaTabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@id/titleAction"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/header_icon_add" />
    </LinearLayout>

</android.support.design.widget.AppBarLayout>