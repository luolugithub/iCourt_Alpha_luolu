<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@mipmap/bg_group_background"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/group_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:maxLines="1"
                    android:text="讨论组标题"
                    android:textColor="@color/alpha_font_color_title"
                    android:textSize="20dp" />

                <View
                    android:layout_width="60dp"
                    android:layout_height="1.5dp"
                    android:layout_margin="15dp"
                    android:background="#FFBAC8CA" />

                <TextView
                    android:id="@+id/group_desc_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="讨论组介绍"
                    android:textColor="@color/alpha_font_color_gray"
                    android:textSize="@dimen/alpha_font_size_mini" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/group_data_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingTop="9dp">

                <TextView
                    android:id="@+id/group_ding_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/ic_ding"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="钉的消息"
                    android:textColor="@color/alpha_font_color_black"
                    android:textSize="@dimen/alpha_font_size_mini" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp"
                    android:background="@color/alpha_divider_color" />

                <TextView
                    android:id="@+id/group_file_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/ic_file_pic"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="文件"
                    android:textColor="@color/alpha_font_color_black"
                    android:textSize="@dimen/alpha_font_size_mini" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@android:color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">


                <TextView
                    android:id="@+id/group_member_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_members"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="成员"
                    android:textColor="@color/alpha_font_color_black"
                    android:textSize="@dimen/alpha_font_size_comm" />

                <TextView
                    android:id="@+id/group_member_invite_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="?attr/selectableItemBackground"
                    android:drawableLeft="@mipmap/ic_add_circle_gray"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="邀请成员"
                    android:textColor="@color/alpha_font_color_black"
                    android:textSize="@dimen/alpha_font_size_mini" />

                <View
                    android:id="@+id/group_title_divider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/alpha_height_divider"
                    android:layout_below="@+id/group_member_num_tv"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/alpha_divider_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/group_title_divider"
                    android:layout_below="@+id/group_title_divider"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/group_member_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:overScrollMode="never"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp" />

                    <ImageView
                        android:id="@+id/group_member_arrow_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/arrow_right" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/group_session_action_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <LinearLayout
                    android:id="@+id/group_setTop_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/ic_msg_set_top"
                        android:drawablePadding="10dp"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp"
                        android:text="在消息列表中置顶"
                        android:textColor="@color/alpha_font_color_black"
                        android:textSize="@dimen/alpha_font_size_comm" />

                    <Switch
                        android:id="@+id/group_setTop_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/alpha_height_divider"
                    android:layout_marginLeft="40dp"
                    android:background="@color/alpha_divider_color" />

                <LinearLayout
                    android:id="@+id/group_disturb_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/ic_alarm_disable"
                        android:drawablePadding="@dimen/dp10"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp"
                        android:text="消息设置免打扰"
                        android:textColor="@color/alpha_font_color_black"
                        android:textSize="@dimen/alpha_font_size_comm" />

                    <Switch
                        android:id="@+id/group_not_disturb_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/group_join_or_quit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_round_rect_red"
                android:padding="10dp"
                android:text="退出讨论组"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/alpha_height_title"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/titleBack"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="?attr/selectableItemBackground"
            android:padding="10dp"
            android:src="@mipmap/header_icon_back" />

        <TextView
            android:id="@id/titleContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/alpha_font_color_title"
            android:textSize="@dimen/alpha_font_size_title" />

        <ImageView
            android:id="@id/titleAction"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="?attr/selectableItemBackground"
            android:padding="10dp"
            android:src="@mipmap/ic_settings" />
    </LinearLayout>

</FrameLayout>