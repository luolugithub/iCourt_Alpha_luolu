<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/divider_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/alpha_background_window"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="48dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/divider_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="今天"
            android:textColor="@color/time_week_text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/divider_time_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="8:15"
            android:textColor="@color/time_week_text_color"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/timer_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:scaleType="center"
            android:src="@mipmap/icon_start_20" />

        <TextView
            android:id="@+id/timer_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:minWidth="50dp"
            android:text="00:32" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/timer_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:drawableRight="@mipmap/arrow_right"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="标题"
                android:textColor="@color/alpha_font_color_black"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/alpha_height_divider"
                android:layout_gravity="bottom"
                android:background="@color/alpha_divider_color" />
        </FrameLayout>


    </LinearLayout>

</LinearLayout>