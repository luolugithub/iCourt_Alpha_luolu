<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title_type_2" />

    <TextView
        android:id="@+id/my_center_update_hint_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="电话号码"
        android:textColor="@color/alpha_font_color_gray"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/my_center_update_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:text="asdasdasdasdasdasdasdasdasdasdasdasdadasdasdasdasdasdasdasdasdasdasdada"
            android:textColor="@color/alpha_font_color_black"
            android:textSize="16dp" />

        <LinearLayout
            android:id="@+id/update_right_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/my_center_update_clear_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:src="@mipmap/icon_close_14" />

            <LinearLayout
                android:id="@+id/update_state_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="@color/alpha_divider_color" />

                <ImageView
                    android:id="@+id/my_center_update_state_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/dp10"
                    android:paddingRight="@dimen/dp10"
                    android:src="@mipmap/header_icon_star_line" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/my_center_update_error_hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/dp5"
            android:text="请使用有效的中国大陆手机号"
            android:visibility="gone"
            android:textColor="@color/alpha_font_color_gray"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/my_center_update_name_hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp5"
            android:text="50/64"
            android:textColor="@color/alpha_font_color_gray"
            android:textSize="12dp" />
    </RelativeLayout>
</LinearLayout>