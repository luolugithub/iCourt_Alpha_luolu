<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title_type_2" />

    <TextView
        android:id="@+id/my_center_update_hint_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="电话号码"
        android:textColor="@color/alpha_font_color_gray"
        android:textSize="16dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/my_center_update_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_white_border_circle_bg"
            android:padding="15dp"
            android:textColor="@color/alpha_font_color_black"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/my_center_update_clear_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:src="@mipmap/icon_close_14" />
    </FrameLayout>
</LinearLayout>