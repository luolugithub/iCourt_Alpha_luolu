<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        style="@style/AlphaTitleAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alpha_height_title">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/alpha_background_title"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="智能搜索"
            android:textStyle="bold"
            android:textColor="@color/alpha_font_color_title"
            android:textSize="@dimen/alpha_font_size_title" />
    </android.support.design.widget.AppBarLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/alpha_height_divider"
        android:background="@color/alpha_divider_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/search_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@mipmap/icon_search_16"
            android:drawablePadding="8dp"
            android:hint="@string/search_edittext_hint_text"
            android:imeOptions="actionSearch"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:textColorHint="@color/alpha_font_color_gray"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/search_input_clear_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@mipmap/icon_close_14"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/search_audio_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/voice_16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/search_cutline_color" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/search_engines_divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="选择搜索引擎"
                android:textColor="@color/alpha_font_color_black"
                android:textSize="@dimen/alpha_font_size_mini" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/engineRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/history_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/history_divider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:text="搜索历史"
                        android:textColor="@color/alpha_font_color_black"
                        android:textSize="@dimen/alpha_font_size_mini" />

                    <ImageView
                        android:id="@+id/search_history_clear_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:src="@mipmap/trash_14" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/historyRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/history_divider"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>