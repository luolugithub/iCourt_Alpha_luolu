<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/alpha_height_divider"
    android:background="@android:color/white"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:id="@+id/document_type_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/ic_document" />

        <TextView
            android:id="@+id/document_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="文档标题"
            android:textColor="@color/alpha_font_color_black"
            android:textSize="@dimen/alpha_font_size_mini_lowest" />

    </LinearLayout>

    <com.icourt.alpha.view.SquareImageView
        android:id="@+id/document_pic_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <View
        android:id="@+id/folder_mask_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33000000"
        android:visibility="gone" />

    <CheckedTextView
        android:id="@+id/folder_document_ctv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="right|bottom"
        android:layout_margin="5dp"
        android:background="@drawable/sl_checkbox" />

</FrameLayout>