<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="horizontal"
    android:padding="10dp">


    <TextView
        android:id="@+id/chat_txt_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="9dp"
        android:background="@drawable/chat_bubble_right_bg"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:paddingRight="18dp"
        android:paddingTop="10dp"
        android:text="消息abcdefghijklmnopqrst"
        android:textColor="@color/alpha_font_color_black"
        android:textSize="@dimen/alpha_font_size_comm" />

    <ImageView
        android:id="@+id/chat_user_icon_iv"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@mipmap/avatar_default_24" />


</LinearLayout>
