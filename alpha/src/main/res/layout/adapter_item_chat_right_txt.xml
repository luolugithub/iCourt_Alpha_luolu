<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42dp"
        android:orientation="horizontal"
        android:padding="0dp">

        <include layout="@layout/adapter_item_chat_send_statu_layout" />

        <TextView
            android:id="@+id/chat_txt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="9dp"
            android:layout_weight="1"
            android:background="@drawable/chat_bubble_right_bg"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="18dp"
            android:paddingTop="10dp"
            android:text="消息abchggh"
            android:textColor="@color/alpha_font_color_black"
            android:textSize="@dimen/alpha_font_size_comm" />

        <ImageView
            android:id="@+id/chat_user_icon_iv"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@mipmap/avatar_default_24" />
    </LinearLayout>

</LinearLayout>
