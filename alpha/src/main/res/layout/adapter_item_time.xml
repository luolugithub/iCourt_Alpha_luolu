<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp15"

    android:paddingTop="@dimen/dp15">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/time_item_duration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:23"
            android:textColor="@color/alpha_font_color_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/time_item_quantum_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:text="11:00-11:23"
            android:textColor="@color/alpha_font_color_gray"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/time_item_user_photo_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:src="@mipmap/avatar_default_24" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/dp15"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/time_item_desc_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目类型图标的重新设计"
                    android:textColor="@color/alpha_font_color_black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/time_item_user_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="李妍熙sally"
                        android:textColor="@color/alpha_font_color_gray"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/time_item_type_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        android:text="内部会议"
                        android:textColor="@color/alpha_font_color_gray"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow_right" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginTop="@dimen/dp10"
            android:background="@color/alpha_divider_color" />
    </LinearLayout>
</LinearLayout>