<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="horizontal"
    android:padding="10dp">


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="钉了一条消息"
                android:textColor="@color/alpha_font_color_black"
                android:textSize="@dimen/alpha_font_size_mini_lowest" />

            <TextView
                android:id="@+id/chat_ding_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="今天的天气不错,写什么代码,卧槽 河边的水满了"
                android:textColor="@color/alpha_font_color_black"
                android:textSize="@dimen/alpha_font_size_mini" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/chat_ding_source_user_icon_iv"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/avatar_default_24" />

                <TextView
                    android:id="@+id/chat_ding_source_user_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="阿三哥"
                    android:textColor="@color/alpha_font_color_black"
                    android:textSize="@dimen/alpha_font_size_mini_lowest" />
            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/chat_user_icon_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/avatar_default_24" />
</LinearLayout>
