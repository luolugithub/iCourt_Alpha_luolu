<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="horizontal"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="9dp"
        android:background="@drawable/chat_bubble_right_bg"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="8dp"
        android:paddingTop="0dp">

        <TextView
            android:id="@+id/chat_ding_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_top_round_rect_white"
            android:ellipsize="end"
            android:maxLines="3"
            android:padding="10dp"
            android:text="钉了一条消息"
            android:textColor="@color/alpha_font_color_black"
            android:textSize="@dimen/alpha_font_size_comm" />

        <TextView
            android:id="@+id/chat_ding_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="今天的天气不错,写什么代码,卧槽 河边的水满了,什么鬼，臭xxx"
            android:textColor="@color/alpha_font_color_black"
            android:textSize="@dimen/alpha_font_size_comm" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/chat_ding_source_user_icon_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/avatar_default_24" />

            <TextView
                android:id="@+id/chat_ding_source_user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="阿三哥"
                android:textColor="@color/alpha_font_color_gray"
                android:textSize="@dimen/alpha_font_size_mini_medium" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/chat_user_icon_iv"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@mipmap/avatar_default_24" />
</LinearLayout>
