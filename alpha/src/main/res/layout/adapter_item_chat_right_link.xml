<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42dp"
        android:orientation="horizontal"
        android:padding="0dp">

        <include layout="@layout/adapter_item_chat_send_statu_layout" />

        <LinearLayout
            android:id="@+id/chat_link_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="9dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chat_link_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_bubble_right_bg_top"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:minEms="10"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:text="百度一下"
                android:textColor="@color/alpha_font_color_title"
                android:textSize="@dimen/alpha_font_size_comm" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:background="@drawable/chat_bubble_right_bg_bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/chat_lin_thumb_iv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/chat_link_url_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:minEms="10"
                        android:text="http://www.baidu.com"
                        android:textColor="@color/alpha_font_color_orange" />

                    <TextView
                        android:id="@+id/chat_link_desc_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="这个网站十分吧不错"
                        android:textColor="@color/alpha_font_color_gray"
                        android:textSize="@dimen/alpha_font_size_mini" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/chat_user_icon_iv"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@mipmap/avatar_default_24" />
    </LinearLayout>
</LinearLayout>
