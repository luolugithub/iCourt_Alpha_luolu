<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/titleView"
    style="@style/AlphaTitleAppBarLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- 【标题布局 请勿轻易修改】 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/alpha_height_title"
        android:background="@color/alpha_background_title"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layout_scrollFlags="scroll|enterAlways|snap">

        <ImageView
            android:id="@id/titleBack"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:padding="10dp"
            android:src="@mipmap/header_icon_back" />

        <TextView
            android:id="@id/titleContent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/titleAction"
            android:layout_toRightOf="@id/titleBack"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/str_title"
            android:textColor="@color/alpha_font_color_title"
            android:textSize="@dimen/alpha_font_size_title"
            android:textStyle="bold" />

        <CheckedTextView
            android:id="@id/titleAction"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/str_save"
            android:textColor="@color/alpha_font_color_orange"
            android:textSize="@dimen/alpha_font_size_comm" />
    </RelativeLayout>

</android.support.design.widget.AppBarLayout>