<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title_type_1" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.icourt.alpha.view.ProgressLayout
            android:id="@+id/progressLayout"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:autoProgress="false"
            app:emptyColor="#00000000"
            app:loadedColor="#FF17AF6C"
            app:maxProgress="100" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/alpha_height_title"
        android:background="@android:color/white"
        android:elevation="5dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/bottom_back_iv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:src="@mipmap/browser_back" />

        <ImageButton
            android:id="@+id/bottom_forward_iv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:src="@mipmap/browser_forward" />

        <ImageButton
            android:id="@+id/bottom_refresh_iv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:src="@mipmap/browser_refresh" />

        <ImageButton
            android:id="@+id/bottom_share_iv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:src="@mipmap/browser_share" />
    </LinearLayout>

</LinearLayout>