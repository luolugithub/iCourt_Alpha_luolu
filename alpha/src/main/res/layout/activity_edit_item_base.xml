<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title_type_3" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="14dp">

        <EditText
            android:id="@+id/input_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="名称"
            android:imeOptions="actionNone"
            android:maxLines="10"
            android:paddingBottom="11dp"
            android:paddingTop="11dp"
            android:textColor="@color/alpha_font_color_black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/input_clear_iv"
            android:layout_width="20dp"
            android:layout_height="44dp"
            android:padding="2dp"
            android:src="@mipmap/cancel"
            android:visibility="gone" />
    </LinearLayout>


    <TextView
        android:id="@+id/input_limit_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="15dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="0/50"
        android:textColor="@color/alpha_font_color_gray"
        android:textSize="@dimen/alpha_font_size_mini"
        android:visibility="gone" />

</LinearLayout>